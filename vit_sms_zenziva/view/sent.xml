<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_vit_sms_sent_tree" model="ir.ui.view">
            <field name="name">vit_sms.sent.tree</field>
            <field name="model">vit_sms.sent</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Sent">
                    <field name="name"/>
                    <field name="send_to" />
                    <field name="group_ids" />
                    <field name="partner_ids" />
                    <field name="destination" />
                    <field name="message" />
                    <field name="send_datetime" />
                    <field name="is_immediate" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record id="view_vit_sms_sent_form" model="ir.ui.view">
            <field name="name">vit_sms.sent.form</field>
            <field name="model">vit_sms.sent</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Sent" version="7.0">
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>

                    <sheet>
                        <group colspan="4">
                            <field name="name"/>
                            <field name="send_to" />
                            <field name="group_ids" widget="many2many_tags"/>
                            <field name="partner_ids" widget="many2many_tags"/>
                            <field name="destination" />
                            <field name="message" />
                            <field name="send_datetime" />
                            <field name="is_immediate" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_vit_sms_sent_search" model="ir.ui.view">
            <field name="name">vit_sms.sent.search</field>
            <field name="model">vit_sms.sent</field>
            <field name="type">search</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Sent">
                    <field name="name" select="True"/>
                    <group expand="0" string="Group By">
                        <filter string="State" icon="terp-camera_test" name="group_by_state" context="{'group_by':'state'}"/>
                        <filter string="Destination" icon="terp-camera_test" name="group_by_destination" context="{'group_by':'destination'}"/>
                        <filter string="Send Datetime" icon="terp-camera_test" name="group_by_send_datetime" context="{'group_by':'send_datetime:day'}"/>
                    </group>

                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_vit_sms_sent_view">
            <field name="name">Sent</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit_sms.sent</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_vit_sms_sent_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_vit_sms_sent_view_form">
            <field name="act_window_id" ref="act_open_vit_sms_sent_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_vit_sms_sent_form"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_vit_sms_sent_view_tree">
            <field name="act_window_id" ref="act_open_vit_sms_sent_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_vit_sms_sent_tree"/>
        </record>

        <menuitem id="menu_vit_sms_sent"
                  parent="vit_sms_history"
                  sequence="30"
                  action="act_open_vit_sms_sent_view"/>

    </data>
</openerp>